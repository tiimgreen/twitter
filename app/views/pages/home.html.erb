<% if signed_in? %>
	<div class="row">
		<aside class="col-md-4 user-info-panel">
			<section>
				<%= render 'shared/user_info' %>
			</section>
			<section>
				<%= render 'shared/stats' %>
			</section>
			<section>
				<%= render 'shared/micropost_form' %>
			</section>
		</aside>
		<div class="col-md-7 main-panel">
			<h3>Micropost Feed</h3>
			<%= render 'shared/feed' %>
		</div>
	</div>
<% else %>
	<div class="jumbotron center">
		<h1 class="home-header">Tim Twitter</h1>
		<p>Sign up now for free!</p>
		<p>
			<a class="btn btn-lg btn-primary" href="<%= signup_path %>" role="button">Sign Up! &raquo;</a>
		</p>
	</div>
<% end %>