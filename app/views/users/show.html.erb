<% provide(:title, @user.name + " (@" + @user.username + ")") %>
<div class="row">
  <aside class="col-md-4">
    <section>
    	<span class="user-gravatar">
      	<%= gravatar_for @user, circle: true %>
      </span>
      <span class="user-info">
        <%= render 'follow_form' if signed_in? %>
	      <h3><%= @user.name %></h3>
	      <h5>@<%= @user.username %></h5>
	     </span>
    </section>
    <section>
      <%= render 'shared/stats' %>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.microposts.any? %>
      <h3>Microposts <span class="badge"><%= @user.microposts.count %></span></h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% else %>
      <h4>This user has no posts yet.</h4>
    <% end %>
  </div>
</div>