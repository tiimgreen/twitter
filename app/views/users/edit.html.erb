<% provide(:title, "Edit User (@" + @user.username + ")") %>

<div class="panel panel-default signup-panel">
	<div class="panel-heading">
		<h2 class="panel-title">Update your profile</h3>
	</div>
	<div class="panel-body">
		<%= form_for(@user) do |f| %>
			<%= render 'shared/error_messages' %>

			<div class="input-group">
				<span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
				<%= f.text_field :name, class: "form-control", placeholder: "Name" %>
			</div>

			<div class="input-group">
				<span class="input-group-addon">@</span>
				<%= f.text_field :username, class: "form-control Username", placeholder: "Username" %>
			</div>

			<div class="input-group">
				<span class="input-group-addon"><span class="glyphicon glyphicon-envelope"></span></span>
				<%= f.text_field :email, class: "form-control", placeholder: "Email" %>
			</div>

			<div class="input-group">
				<span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
				<%= f.password_field :password, class: "form-control", placeholder: "Password" %>
			</div>


			<div class="input-group">
				<span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
				<%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirmation" %>
			</div>

			<%= f.submit "Save changes", class: "btn btn-large btn-primary" %>
		<% end %>
		<div class="edit-gravatar">
			<%= gravatar_for @user %>
			<a href="http://gravatar.com/emails">change</a>
		</div>
	</div>
</div>
