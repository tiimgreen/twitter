<li id="<%= feed_item.user.username %>-<%= feed_item.id %>" class="post-micropost">
	<div class="post-gravatar"><%= gravatar_for feed_item.user %></div>
	<div class="post-name"><strong><%= link_to feed_item.user.name, feed_item.user %></strong></div>
	<span class="post-username">@<%= feed_item.user.username %></span>
	<span class="post-timestamp"><%= time_ago_in_words(feed_item.created_at) %> ago</span>
	<span class="post-content"><%= feed_item.content %></span>
	<% if current_user?(feed_item.user) %>
		<%= link_to "delete", feed_item, method: :delete, data: { confirm: "You sure?" },
                                     title: feed_item.content, class: "post-delete" %>
  <% elsif current_user && current_user.admin? %>
  	<%= link_to "delete as admin", feed_item, method: :delete, data: { confirm: "You sure?" },
                                     title: feed_item.content, class: "post-delete" %>
  <% end %>
</li>