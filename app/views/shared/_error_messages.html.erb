<% if @user.errors.any? %>
  <div id="error_explanation">
    <span class="alert alert-error">
      <strong>The form contains <%= pluralize(@user.errors.count, "error") %>.</strong>
    </span>
    <ul>
    <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>